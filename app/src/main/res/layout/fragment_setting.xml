<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatFragment">

    <!--제목, 상단바-->
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="설정"
            android:fontFamily="@font/suit_bold"
            android:textColor="#000000"
            android:textSize="16dp"/>
    </LinearLayout>



    <!--프로필 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <!--프로필 이미지-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="25dp">

            <!--프로필 이미지-->
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/circle_profile_grey"/>
        </LinearLayout>

        <!--유저 정보-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center|left">

            <!--유저 닉네임-->
            <TextView
                android:id="@+id/userNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_bold"
                android:layout_marginLeft="25dp"/>

            <!--유저 이메일-->
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_bold"
                android:alpha="0.5"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <!--프로필 수정-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp">

            <!--프로필 수정 버튼-->
            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:src="@drawable/ic_round_arrow_forward_ios_24"/>

        </LinearLayout>
    </LinearLayout>

    <!--구분선-->
    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:background="#000000"
        android:alpha="0.3"
        android:layout_gravity="center"/>

    <!--공지 사항-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!--공지 사항 UI, 구분선, 텍스트-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|left">

            <!--공지 사항 UI-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_warning_24"
                android:layout_marginLeft="46dp"/>

            <!--세로 구분선-->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#000000"
                android:alpha="0.3"
                android:layout_marginLeft="18dp"/>

            <!--공지 사항 텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지 사항"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_bold"
                android:alpha="0.7"
                android:layout_marginLeft="18dp"/>

        </LinearLayout>

        <!--버튼-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!--공지 사항 버튼 UI-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_round_arrow_forward_ios_24"
                android:layout_marginRight="45dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--QnA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!--QnA UI, 구분선, 텍스트-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|left">

            <!--QnA UI-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_filter_none_24"
                android:layout_marginLeft="47dp"/>

            <!--구분선-->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:alpha="0.3"
                android:background="#000000" />

            <!--QnA 텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QnA"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_bold"
                android:alpha="0.7"
                android:layout_marginLeft="18dp"/>

        </LinearLayout>

        <!--버튼-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!--버튼 UI-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_round_arrow_forward_ios_24"
                android:layout_marginRight="45dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--약관 및 정책-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!--약관 및 정책 UI, 구분선, 텍스트-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|left">

            <!--약관 및 정책 UI-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_content_paste_24"
                android:layout_marginLeft="47dp"/>

            <!--구분선-->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#000000"
                android:alpha="0.3"
                android:layout_marginLeft="18dp"/>

            <!--약관 및 정책 텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관 및 정책"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_bold"
                android:alpha="0.7"
                android:layout_marginLeft="18dp"/>

        </LinearLayout>

        <!--버튼-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!--버튼 UI-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_round_arrow_forward_ios_24"
                android:layout_marginRight="45dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--버전 정보-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!--버전 정보 UI, 구분선, 텍스트-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|left">

            <!--버전 정보 UI-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_info_24"
                android:layout_marginLeft="47dp"/>

            <!--구분선-->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#000000"
                android:alpha="0.3"
                android:layout_marginLeft="18dp"/>

            <!--텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버전 정보"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_bold"
                android:alpha="0.7"
                android:layout_marginLeft="18dp"/>

        </LinearLayout>

        <!--텍스트, 버튼-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!--버전 텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textColor="#000000"
                android:alpha="0.3"
                android:textSize="12sp"
                android:fontFamily="@font/suit_regular"
                android:layout_marginRight="12dp"/>

            <!--버튼 UI-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_round_arrow_forward_ios_24"
                android:layout_marginRight="45dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--고객 센터-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <!--고객 센터 UI, 구분선, 텍스트-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|left">

            <!--고객 센터 UI-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_contact_support_24"
                android:layout_marginLeft="47dp"/>

            <!--구분선-->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#000000"
                android:alpha="0.3"
                android:layout_marginLeft="18dp"/>

            <!--텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객 센터"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/suit_bold"
                android:alpha="0.7"
                android:layout_marginLeft="18dp"/>

        </LinearLayout>

        <!--텍스트, 버튼-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!--BRZ 텍스트-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studio BRZ"
                android:textColor="#000000"
                android:alpha="0.3"
                android:textSize="12sp"
                android:fontFamily="@font/suit_regular"
                android:layout_marginRight="12dp"/>

            <!--버튼 UI-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:src="@drawable/ic_round_arrow_forward_ios_24"
                android:layout_marginRight="45dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/signoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="로그아웃"
        android:backgroundTint="#EDEDED"
        android:shadowColor="@color/white"
        android:fontFamily="@font/suit_medium"
        android:textColor="@color/black"/>
</LinearLayout>

